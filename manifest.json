{
  "manifest_version": 3,
  "name": "Quick Log",
  "version": "0.1.6",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://*/*", "http://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.jsx"]
    }
  ],
  "background": {
    "service_worker": "src/background.jsx"
  }
}
